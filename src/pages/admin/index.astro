---
import Layout from '../../layouts/Layout.astro';

// This would typically be handled by a backend authentication system
const isAuthenticated = false;
---

<Layout title="Admin Dashboard">
  <main class="min-h-screen py-12 px-4">
    <div class="max-w-4xl mx-auto">
      {isAuthenticated ? (
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h1 class="text-3xl font-display text-deep-blue mb-8">Story Management Dashboard</h1>
          
          <div class="space-y-8">
            <!-- Story List -->
            <section>
              <h2 class="text-2xl font-display text-deep-blue mb-4">Published Stories</h2>
              <div class="space-y-4">
                <!-- Story items would be dynamically populated here -->
              </div>
            </section>

            <!-- Add New Story Form -->
            <section>
              <h2 class="text-2xl font-display text-deep-blue mb-4">Add New Story</h2>
              <form class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                  <input
                    type="text"
                    required
                    class="w-full px-4 py-2 rounded-lg border-2 border-gentle-purple/30 focus:border-gentle-purple focus:outline-none"
                  />
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                  <select
                    required
                    class="w-full px-4 py-2 rounded-lg border-2 border-gentle-purple/30 focus:border-gentle-purple focus:outline-none"
                  >
                    <option value="">Select a category</option>
                    <option value="fairy-tales">Fairy Tales</option>
                    <option value="fables">Fables</option>
                    <option value="adventures">Adventures</option>
                    <option value="fantasy">Fantasy</option>
                    <option value="mythology">Mythology</option>
                  </select>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Cover Image</label>
                  <input
                    type="file"
                    accept="image/*"
                    required
                    class="w-full px-4 py-2 rounded-lg border-2 border-gentle-purple/30 focus:border-gentle-purple focus:outline-none"
                  />
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Teaser Text</label>
                  <textarea
                    required
                    rows="3"
                    class="w-full px-4 py-2 rounded-lg border-2 border-gentle-purple/30 focus:border-gentle-purple focus:outline-none"
                  ></textarea>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Story Content</label>
                  <textarea
                    required
                    rows="10"
                    class="w-full px-4 py-2 rounded-lg border-2 border-gentle-purple/30 focus:border-gentle-purple focus:outline-none"
                  ></textarea>
                </div>

                <button
                  type="submit"
                  class="w-full px-6 py-3 bg-deep-blue text-white rounded-lg hover:bg-gentle-purple transition-colors duration-200"
                >
                  Publish Story
                </button>
              </form>
            </section>
          </div>
        </div>
      ) : (
        <div class="bg-white rounded-lg shadow-lg p-8 max-w-md mx-auto">
          <h1 class="text-3xl font-display text-deep-blue mb-8 text-center">Admin Login</h1>
          
          <form class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Username</label>
              <input
                type="text"
                required
                class="w-full px-4 py-2 rounded-lg border-2 border-gentle-purple/30 focus:border-gentle-purple focus:outline-none"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
              <input
                type="password"
                required
                class="w-full px-4 py-2 rounded-lg border-2 border-gentle-purple/30 focus:border-gentle-purple focus:outline-none"
              />
            </div>

            <button
              type="submit"
              class="w-full px-6 py-3 bg-deep-blue text-white rounded-lg hover:bg-gentle-purple transition-colors duration-200"
            >
              Login
            </button>
          </form>
        </div>
      )}
    </div>
  </main>
</Layout>