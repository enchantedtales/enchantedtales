---
import '@fontsource/alice';
import '@fontsource/crimson-text';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="EnchantedTales - Dive into Magical Stories" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | EnchantedTales</title>
  </head>
  <body class="bg-story-bg min-h-screen flex flex-col">
    <Navigation />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent-gradient: linear-gradient(45deg, #1a237e, #9575cd);
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    font-family: 'Crimson Text', serif;
  }
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Alice', serif;
  }
</style>