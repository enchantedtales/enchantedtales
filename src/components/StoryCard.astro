---
interface Props {
  title: string;
  description: string;
  image: string;
  category: string;
  href: string;
}

const { title, description, image, category, href } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-200">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <span class="text-gentle-purple text-sm font-semibold">{category}</span>
    <h3 class="font-display text-xl text-deep-blue mt-2">{title}</h3>
    <p class="mt-2 text-gray-600">{description}</p>
    <a
      href={href}
      class="inline-block mt-4 px-6 py-2 bg-deep-blue text-white rounded-full hover:bg-gentle-purple transition-colors duration-200"
    >
      Read More
    </a>
  </div>
</article>