<div class="relative mb-8">
  <input
    type="text"
    id="story-search"
    placeholder="Search stories..."
    class="w-full px-4 py-2 rounded-lg border-2 border-gentle-purple/30 focus:border-gentle-purple focus:outline-none"
  />
  <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400">üîç</span>
</div>

<script>
  const searchInput = document.getElementById('story-search');
  searchInput?.addEventListener('input', (e) => {
    const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
    const stories = document.querySelectorAll('[data-story-title]');
    
    stories.forEach(story => {
      const title = story.getAttribute('data-story-title')?.toLowerCase() || '';
      const description = story.getAttribute('data-story-description')?.toLowerCase() || '';
      
      if (title.includes(searchTerm) || description.includes(searchTerm)) {
        story.classList.remove('hidden');
      } else {
        story.classList.add('hidden');
      }
    });
  });
</script>